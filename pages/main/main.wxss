.container {
  width: 100%;
  height: 100vh;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.bg-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

/* 顶部菜单样式 */
.menu-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background-color: rgba(255, 255, 255, 0.8);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 10;
  padding: 10rpx 0;
}

.menu-item {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 15rpx 0;
  flex: 1;
  text-align: center;
  border-right: 1rpx solid #eee;
}

.menu-item:last-child {
  border-right: none;
}

.menu-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding: 0 10rpx;
}

/* 底部输入栏样式 */
.input-container {
  position: absolute;
  bottom: 0;
  width: 100%;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 10;
}

.input-box {
  display: flex;
  align-items: flex-end;
  min-height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 10rpx 20rpx;
}

.image-selector {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon {
  width: 40rpx;
  height: 40rpx;
}

.text-input {
  flex: 1;
  min-height: 60rpx;
  max-height: 240rpx; /* 最多显示5行左右 */
  padding: 10rpx 20rpx;
  font-size: 32rpx;
  line-height: 44rpx;
  width: 100%;
}

.send-button {
  width: 100rpx;
  height: 60rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  margin-right: 10rpx;
}

.plus-button {
  width: 60rpx;
  height: 60rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #666;
}

.icon-text {
  font-size: 24rpx;
  color: #666;
}

/* 聊天区域样式 */
.chat-container {
  position: absolute;
  top: 90rpx; /* 顶部菜单下方 */
  bottom: 120rpx; /* 输入框上方 */
  width: 100%;
  z-index: 5;
  padding: 20rpx;
  box-sizing: border-box;
}

.chat-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  padding-top: 30rpx; /* 从30%顶部位置开始 */
}

.message-item {
  max-width: 70%;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
}

.message-ai {
  align-self: flex-start;
  margin-right: auto;
}

.message-user {
  align-self: flex-end;
  margin-left: auto;
}

.message-content {
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
  word-break: break-all;
  line-height: 42rpx;
}

.message-ai .message-content {
  background-color: #fff;
  color: #333;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.message-user .message-content {
  background-color: #07c160;
  color: #fff;
} 